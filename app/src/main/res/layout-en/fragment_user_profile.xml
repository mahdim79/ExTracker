<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinatorlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layoutDirection="ltr"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="wrap_content"
                    app:tint="?android:textColor"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back"/>

                <com.dust.extracker.customviews.CTextView
                    android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/image_back"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="?android:textColor"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="@dimen/standardMargin2x"
                    android:text="@string/loginAndSignUp"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="?colorPrimary"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/others_profilePhoto"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/application_icon" />
        <EditText
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:hint="@string/nameAndLastname"
            android:inputType="phone"
            android:layout_marginTop="@dimen/standardMargin2x"
            android:gravity="center"
            android:textColorHint="?android:textColor"
            android:textColor="?android:textColor"
            android:layout_marginHorizontal="@dimen/standardMargin3x"/>
        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:hint="@string/email"
            android:inputType="phone"
            android:textColorHint="?android:textColor"
            android:textColor="?android:textColor"
            android:layout_marginTop="@dimen/standardMargin2x"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/standardMargin3x"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edittext_shape"
            android:layout_marginTop="@dimen/standardMargin2x"
            android:layout_marginHorizontal="@dimen/standardMargin3x"
            android:orientation="horizontal">
            <Button
                android:id="@+id/change_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/change"
                android:textColor="@color/login_button_textcolor_selector"
                android:drawableStart="@drawable/ic_baseline_phone"
                android:drawableTint="@color/white"
                android:background="@drawable/login_button_selector"
                />
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phoneNumber"
                android:inputType="phone"
                android:textColorHint="?android:textColor"
                android:textColor="?android:textColor"
                android:background="@drawable/default_edittext_shape"
                android:gravity="center"
                />
        </LinearLayout>

        <Button
            android:id="@+id/submit_save"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/save"
            android:textColor="@color/login_button_textcolor_selector"
            android:layout_marginHorizontal="@dimen/standardMargin3x"
            android:background="@drawable/login_button_selector"
            android:layout_marginTop="@dimen/standardMargin2x"
            android:padding="@dimen/standardMargin0.5x"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>