<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/portfolio_empty"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/portfolio_title"
        android:textStyle="bold"
        android:textColor="?android:textColor"
        android:textSize="@dimen/TextSize4x"
        android:layout_marginTop="@dimen/standardMargin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/portfolio_notation"
        android:textSize="@dimen/TextSize2x"
        android:layout_gravity="center"
        android:textColor="?android:textColor"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/standardMargin4x"
        android:layout_marginTop="@dimen/standardMargin"
        />

    <Button
        android:id="@+id/add_portfolio"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="@string/potfolio_add_btn"
        android:textColor="@color/button_textcolor_selector"
        android:layout_marginHorizontal="@dimen/standardMargin4x"
        android:background="@drawable/main_button_selector"
        android:layout_marginTop="@dimen/standardMargin3x"
        />

</LinearLayout>