<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExTracker.light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_transparent</item>
        <item name="colorPrimaryVariant">@color/white_varient</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/light_black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExTracker.dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_normal</item>
        <item name="colorPrimaryVariant">@color/light_black</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/white_varient</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customTabLayout" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/green_light</item>
        <item name="android:textSize">11dp</item>
    </style>
</resources>