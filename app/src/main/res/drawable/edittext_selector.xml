<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_focused="false">
    <shape android:shape="rectangle"
        >
        <solid android:color="?colorPrimary"
            />
        <corners android:radius="@dimen/standardMargin"/>
        <stroke android:width="1dp" android:color="?colorAccent"
            />
        <padding android:right="@dimen/standardMargin0.5x" android:bottom="@dimen/standardMargin0.5x" android:top="@dimen/standardMargin0.5x" android:left="@dimen/standardMargin0.5x"/>
    </shape>
</item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"
            >
            <solid android:color="?colorPrimary"
                />
            <corners android:radius="@dimen/standardMargin"/>
            <stroke android:width="1dp" android:color="?colorSecondary"
                />
        </shape>
    </item>
</selector>