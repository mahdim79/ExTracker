<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/linear_gradient_red" />
            <gradient android:startColor="@color/linear_gradient_green" android:endColor="@color/green" android:angle="0"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/linear_gradient_red" />
            <gradient android:startColor="@color/green" android:endColor="@color/green" android:angle="0"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>