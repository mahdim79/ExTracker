<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="22dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/img_slider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/btc_icon"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/standardMargin3x">

                <com.dust.extracker.customviews.CTextView
                    android:id="@+id/slider_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/standardMargin1.5x"
                    tools:text="تحلیل قیمت بیت کوین! ریزش تا کجا ادامه دارد؟"
                    android:gravity="center"/>

                <com.dust.extracker.customviews.CTextView
                    android:id="@+id/slider_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/standardMargin"
                    tools:text="2روز پیش"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/standardMargin"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>